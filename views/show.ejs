<% include ./partials/header%>
<div class="ui container main text segment">
<div class="ui huge header"><%=post.title%></div>
<div class="ui top attached">
   <div class="item">
        <img class="ui image rounded centered" src="<%=post.image%>">
   </div>
   <div class="content">
        <span><%=post.created.toDateString()%></span>
        
   </div>
   <div class="description">
        <p><%-post.body%></p>
   </div>

    <a href="/blogs/<%=post._id%>/edit" class="ui blue button">Edit</a>

   <form id="deleteform" action="/blogs/<%=post._id%>?_method=DELETE" method="post">
   <button class="ui red button">Delete</button>
</form>

</div>


</div>
<% include ./partials/footer%>