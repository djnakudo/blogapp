<% include ./partials/header%>
<div class="ui main text container">
        <div class="ui huge header">
            RESTful blog posts
        </div>
        <div class="ui divided items">
    <% posts.forEach(post=>{ %>
     
            
                <div class="item centered">
                    <div class="image">
                            <img class="ui image rounded centered" src="<%=post.image%>">
                    </div>
                    
                
                <div class="content">
                        <span class=" header">
                                <%=post.title%>
                        </span>
                <div class="meta">
                    <span>
                        <%=post.created.toDateString()%>
                    </span>

                </div>
                <div class="description">
                    <p>
                        <%-post.body.substring(0,100)%>...
                    </p>
                </div>
            
            <div class="extra">
                    <a href="/blogs/<%=post._id%>" class="ui floated button primary">Read More <i class="right icon chevron"></i> </a>
            </div>
        </div>
    </div>
        <%})%>
    </div>
    </div>
            <% include ./partials/footer%>